# Use exact versions to ensure consistency
save-exact=true

# Use strict peer dependencies
strict-peer-dependencies=false

# Enable workspaces
enable-pre-post-scripts=true

# Ensure node-linker is set to hoisted for better compatibility
node-linker=hoisted

# Set registry
registry=https://registry.npmjs.org/

# Increase network timeout for slower connections
network-timeout=100000 